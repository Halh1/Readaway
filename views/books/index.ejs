<%- include('../partials/header') %>

<table id="list">
    <thead>
        <tr>
            <th>Title</th>
            <th>Published<br>Year</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
       <% books.forEach(function(b) { %>
            <tr>
                <td><%= b.title %></td>
                <td><%= b.publishYear %></td>
                <td><a href="/books/<%= b._id %>">Details</a></td>
                <td>
                    <form action="/books/<%= b._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="delete-btn">X</button>
                    </form>
                </td>
            </tr>
       <% }); %> 
    </tbody>
</table>

<%- include('../partials/footer') %>