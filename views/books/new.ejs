<%- include('../partials/header') %>
<form id="new-form" actin="" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" required>
    <label for="author">Author</label>
    <input type="text" name="author" required>
    <label for="publishYear">Published Year</label>
    <input type="Number" name="publishYear" min="1111" max="9999" required>
    <label for="genre">Genre</label>
    <select name="genre">
        <option value="YA">YA</option>
        <option value="Fantasy">Fantasy</option>
        <option value="Historical Fiction">Historical Fiction</option>
        <option value="Thriller">Thriller</option>
        <option value="Mystery">Mystery</option>
        <option value="Graphic Novel">Graphic Novel</option>
        <option value="Non-Fiction">Non-Fiction</option>
    </select>
    <label for="hardcover">Hardcover</label>
    <input type="checkbox" name="hardcover" checked>
    <input type="submit" value="Add Book">
</form>

<%- include('../partials/footer') %>